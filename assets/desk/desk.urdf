        <visual>
            <origin rpy="1.5707 0 0" xyz="0 -0.35 0.455"/>
            <geometry>
                <mesh filename="meshes/Drawer_Handle.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="LightGrey"/>
        </visual>
        <collision>
