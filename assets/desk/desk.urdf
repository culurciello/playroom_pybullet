        <visual>
            <origin rpy="1.5707 0 0" xyz="-0.2 -0.36 0.75"/>
            <geometry>
                <mesh filename="meshes/Slide_Wood.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="WoodColor"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="meshes/Slide_Wood.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <link name="SlideHandle">  
<!--         <contact>
